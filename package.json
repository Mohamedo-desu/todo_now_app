{
  "name": "todo_now_app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "publish:android": "eas build --platform android --profile preview",
    "update:app": "eas update --branch preview && npx sentry-expo-upload-sourcemaps dist",
    "upgrade": "bun install expo@latest && bunx expo install --fix",
    "android": "bunx expo run:android --device",
    "build:web": "npx expo export --platform web",
    "release:android": "bunx expo run:android --device --variant Release",
    "release:web": "eas deploy --prod",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "ios": "expo run:ios"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.9.14",
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@sentry/react-native": "~6.10.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "convex": "^1.23.0",
    "expo": "~53.0.0-preview.7",
    "expo-blur": "~14.1.2",
    "expo-build-properties": "~0.14.3",
    "expo-constants": "~17.1.2",
    "expo-font": "~13.1.2",
    "expo-haptics": "~14.1.2",
    "expo-linking": "~7.1.2",
    "expo-notifications": "~0.30.2",
    "expo-quick-actions": "^4.0.2",
    "expo-router": "~5.0.2-preview.4",
    "expo-secure-store": "~14.2.0",
    "expo-splash-screen": "~0.30.4",
    "expo-status-bar": "~2.2.1",
    "expo-symbols": "~0.4.2",
    "expo-system-ui": "~5.0.3",
    "expo-updates": "~0.28.3",
    "expo-web-browser": "~14.1.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.0",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.3",
    "react-native-safe-area-context": "5.3.0",
    "react-native-screens": "~4.10.0",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "svix": "^1.64.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "@types/react-test-renderer": "^19.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~53.0.0-preview.3",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true,
  "trustedDependencies": [
    "@sentry/cli",
    "esbuild"
  ]
}
